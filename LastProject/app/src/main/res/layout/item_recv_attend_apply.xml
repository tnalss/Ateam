<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_radius2"
    android:padding="5dp"
    android:layout_margin="2dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/apply_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반차"
            style="@style/main_size"/>
        <LinearLayout
            android:layout_below="@+id/apply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/apply_d_text"
                style="@style/small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청날짜 "/>
            <TextView
                android:id="@+id/apply_date"
                style="@style/small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.01.02(월)"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/check"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        />
    <TextView
        android:textSize="9dp"
        android:id="@+id/detail"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="자세히보기"/>
</RelativeLayout>