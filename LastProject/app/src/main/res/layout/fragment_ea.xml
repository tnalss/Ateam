<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ea.EaFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--상단메뉴바-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--회사 로고& 이름-->
        <LinearLayout
            android:id="@+id/l1"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/onlylogo"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                style="@style/main_size"
                android:text="JK COMPANY"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_burger"
            android:src="@drawable/ic_menu_c"
            android:layout_width="25dp"
            android:layout_height="25dp"   />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/sub_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="안녕하세요."
                android:textColor="@color/light_color" />

            <TextView
                android:id="@+id/tv_emp_name"
                style="@style/main_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지현우(JI)님"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardv_draft"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/main_color"
                    app:cardCornerRadius="20dp">

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="기안함"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardv_sign"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/main_color"
                    app:cardCornerRadius="20dp">

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="결재함"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardv_return"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/main_color"
                    app:cardCornerRadius="20dp">

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="반려함"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardv_retry"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/main_color"
                    app:cardCornerRadius="20dp">

                    <TextView
                        style="@style/sub_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="회수함"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="30dp"
                android:background="#7A7979" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="자주쓰는 문서바로가기"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardv_vacation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/main_color"
                app:cardCornerRadius="10dp">

                <TextView
                    style="@style/sub_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="휴가 신청서"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardv_overtime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/main_color"
                app:cardCornerRadius="10dp">

                <TextView
                    style="@style/sub_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="파견 신청서"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardv_business"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/main_color"
                app:cardCornerRadius="10dp">

                <TextView
                    style="@style/sub_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="외근 신청서"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="30dp"
                android:background="#7A7979" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="최근 문서"
                android:textColor="@color/black" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:tabGravity="start"
                app:tabIndicatorColor="#000"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="#000"
                app:tabTextColor="#787878" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_recent_ea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardv_write"
        android:backgroundTint="@color/sub_color"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="300dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="500dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_write"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </androidx.cardview.widget.CardView>
    </FrameLayout>

</LinearLayout>