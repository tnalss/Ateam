<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ea.WriteEaFragment"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--상단 메뉴-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <!--회사 로고& 이름-->
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/onlylogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_gravity="center"
                    style="@style/main_size"
                    android:text="JK COMPANY"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            style="@style/sub_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기안 작성" />
        <TextView
            android:layout_marginBottom="30dp"
            android:id="@+id/tv_main"
            style="@style/main_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="기안명"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/line_vacation"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="기안양식"
                android:textColor="@color/light_color"
                android:layout_weight="1"
               android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_form"
                android:text="기안양식"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="종류"
                android:textColor="@color/light_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_type"
                android:text="시작일"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="휴가시작"
                android:textColor="@color/light_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_start_date"
                android:text="시작일"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="휴가종료일"
                android:textColor="@color/light_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_end_date"
                android:text="시작일"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="공개여부"
                android:textColor="@color/light_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RadioGroup
            android:layout_gravity="center"
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:orientation="horizontal">
            <RadioButton
                android:checked="true"
                android:id="@+id/radio_open"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginRight="10dp"
                android:text="공개" />

            <RadioButton
                android:id="@+id/radio_depart"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp"
                android:text="부서공개" />

            <RadioButton
                android:id="@+id/radio_private"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="비공개" />
        </RadioGroup>
        <TextView
            android:id="@+id/tv_dep_title"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:text="기안부서"
            android:textColor="@color/light_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/spinner_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginBottom="15dp"
            android:background="#7A7979"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:text="결재선"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sign_check"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="결제선이 비어있습니다. 결재선을 추가해주세요."
            android:layout_width="140dp"
            android:layout_height="100dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:background="#F2EEEE"
            android:id="@+id/recv_sign_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_sign_add"
            android:backgroundTint="@color/main_color"
            android:text="결제선 추가"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:text="참조(선택)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_refer_check"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="참조가 비어있습니다. 참조를 추가해주세요."
            android:layout_width="140dp"
            android:layout_height="100dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:background="#F2EEEE"
            android:id="@+id/recv_refer_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_refer_add"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/main_color"
            android:text="참조 추가"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <View
            android:layout_marginBottom="15dp"
            android:background="#7A7979"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            style="@style/sub_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기안 내용" />
        <TextView
            android:text="기안제목"
            android:textColor="@color/light_color"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_ea_title"
            android:layout_marginBottom="10dp"
            android:hint="기안제목 입력"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:text="첨부파일"
            android:textColor="@color/light_color"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_marginBottom="10dp"
            android:text="파일추가 +"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_ea_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginBottom="20dp"
            android:background="#DDDDDB"
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <TextView
            android:layout_marginBottom="10dp"
            android:text="내용작성"
            android:textColor="@color/light_color"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_ea_content"
            android:background="#F2EEEE"
            android:gravity="top"
            android:scrollbars = "vertical"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_temp_save"
            android:backgroundTint="#3C3B3B"
            android:textColor="@color/white"
            android:text="임시저장"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btn_apply"
            android:backgroundTint="@color/main_color"
            android:textColor="@color/white"
            android:text="상신하기"
            android:layout_marginBottom="10dp"
           android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp"/>

    </LinearLayout>

</FrameLayout>